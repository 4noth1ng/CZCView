{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": false,
    "target": "es2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    // "rootDirs": ["./", "./packages", "./packages/components"],
    "paths": {
      "@/*": ["packages/components/src/*"],
      "utils/*": ["packages/utils/*"]
    }
  },
  "exclude": ["node_modules", "**/*.tsx"]
}
